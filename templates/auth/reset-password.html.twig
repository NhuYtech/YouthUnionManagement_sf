<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Đặt lại mật khẩu</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="{{ asset('admin/img/logo.png') }}">

    <!-- Custom fonts for this template-->
    <link href="{{ asset('admin/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
    
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="{{ asset('admin/css/sb-admin-2.min.css') }}" rel="stylesheet">
</head>

<body style="background: url('{{ asset('admin/img/nen.png') }}') no-repeat center center fixed; background-size: cover;">
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
            <!-- Form đặt lại mật khẩu căn giữa -->
            <div class="col-md-6 col-lg-5 d-flex align-items-center">
                <div class="card o-hidden border-0 shadow-lg p-4 w-100">
                    <div class="text-center">
                        <img src="{{ asset('admin/img/yumm.png') }}" alt="Logo Đoàn" style="max-width: 220px; height: auto; margin-bottom: 20px;">
                    </div>

                    <div class="text-center">
                        <h1 class="h6" style="font-weight: bold; color: black; margin-bottom: 1rem;">ĐẶT LẠI MẬT KHẨU</h1>
                    </div>

                    <!-- Thông báo flash -->
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success text-center">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-danger text-center">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger text-center">{{ message }}</div>
                    {% endfor %}

                    <!-- Form đặt lại mật khẩu -->
                    {{ form_start(form, {'attr': {'class': 'user'}}) }}

                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control form-control-user mb-3', 'placeholder': 'Nhập mật khẩu mới'}}) }}
                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control form-control-user mb-3', 'placeholder': 'Xác nhận mật khẩu'}}) }}

                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-user btn-block'}}) }}

                    {{ form_end(form) }}

                    <hr>
                    <div class="text-center">
                        <a href="{{ path('app_login') }}">Đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>