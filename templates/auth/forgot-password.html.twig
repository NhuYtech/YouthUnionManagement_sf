    <title>Quên mật khẩu</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="{{ asset('admin/img/logo.png') }}">

    <!-- Custom fonts for this template -->
    <link href="{{ asset('admin/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('admin/css/sb-admin-2.min.css') }}" rel="stylesheet">
</head>

<body style="background: url('{{ asset('admin/img/nen.png') }}') no-repeat center center fixed; background-size: cover;">
    <div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card o-hidden border-0 shadow-lg p-4" style="width: 100%; max-width: 450px;">
            <div class="text-center">
                <img src="{{ asset('admin/img/yumm.png') }}" alt="Logo Đoàn" style="max-width: 220px; height: auto; margin-bottom: 20px;">
            </div>
            <div class="text-center">
                <h1 class="h6" style="font-weight: bold; color: black; margin-bottom: 1rem;">QUÊN MẬT KHẨU</h1>
            </div>

            <!-- Hiển thị thông báo flash -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger" role="alert">{{ message }}</div>
            {% endfor %}

            <!-- Form gửi email quên mật khẩu -->
            {{ form_start(form, {'attr': {'class': 'user'}}) }}
            <div class="form-group">
                {{ form_row(form.email, {'attr': {'class': 'form-control form-control-user mb-3'}}) }}
            </div>
            
            {{ form_end(form) }}
            
            <hr>

            <div class="text-center">
                <a href="{{ path('app_register') }}">Tạo tài khoản!</a>
            </div>
            <div class="text-center">
                <a href="{{ path('app_login') }}">Bạn đã có tài khoản? Đăng nhập!</a>
            </div>
        </div>
    </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('admin/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('admin/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Core plugin JavaScript -->
    <script src="{{ asset('admin/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

    <!-- Custom scripts for all pages -->
    <script src="{{ asset('admin/js/sb-admin-2.min.js') }}"></script>
</body>
</html>